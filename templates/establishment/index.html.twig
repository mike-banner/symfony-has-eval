{% extends 'base.html.twig' %}

{% block title %}Établissements{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Liste des établissements</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for e in establishments %}
                <tr>
                    <td>{{ e.name }}</td>
                    <td>{{ e.city }}</td>
                    <td>
                        <a href="{{ path('evaluate_establishment', {'id': e.id}) }}" class="btn btn-sm btn-primary">
                            Évaluer
                        </a>
                        <a href="{{ path('establishment_report', {'id': e.id}) }}" class="btn btn-sm btn-success">
                            Voir rapport
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucun établissement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
