{% extends 'base.html.twig' %}

{% block title %}Évaluer {{ establishment.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Évaluer : {{ establishment.name }}</h1>
    <p><strong>Ville :</strong> {{ establishment.city }}</p>

    <form method="post">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Critère</th>
                    <th>Score (1-4)</th>
                    <th>Commentaire</th>
                </tr>
            </thead>
            <tbody>
                {% for criterion in criteria %}
                    {% set existing = existingEvaluations[criterion.id] ?? {} %}
                    <tr>
                        <td>
                            {{ criterion.label }}<br>
                            <small class="text-muted">{{ criterion.objective }}</small>
                        </td>
                        <td>
                            <select name="scores[{{ criterion.id }}]" class="form-select" required>
                                <option value="">--</option>
                                {% for i in 1..4 %}
                                    <option value="{{ i }}" {% if existing.score is defined and existing.score == i %}selected{% endif %}>{{ i }}</option>
                                {% endfor %}
                            </select>
                        </td>
                        <td>
                            <textarea name="comments[{{ criterion.id }}]" class="form-control" rows="2">{{ existing.comment|default('') }}</textarea>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Enregistrer les évaluations</button>
        <a href="{{ path('establishments_index') }}" class="btn btn-secondary ms-2">Retour à la liste</a>
    </form>
</div>
{% endblock %}
