{% extends 'base.html.twig' %}

{% block title %}Rapport - {{ establishment.name }}{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Rapport d'évaluation : {{ establishment.name }}</h1>
    <p><strong>Ville :</strong> {{ establishment.city }}</p>

    {% if evaluations|length > 0 %}
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Critère</th>
                    <th>Score</th>
                    <th>Commentaire</th>
                </tr>
            </thead>
            <tbody>
                {% for eval in evaluations %}
                    <tr>
                        <td>{{ eval.criterion.label }}<br><small class="text-muted">{{ eval.criterion.objective }}</small></td>
                        <td class="text-center">
                            <span class="badge 
                                {% if eval.score == 4 %}bg-success
                                {% elseif eval.score == 3 %}bg-info
                                {% elseif eval.score == 2 %}bg-warning text-dark
                                {% else %}bg-danger{% endif %}
                            ">
                                {{ eval.score }}
                            </span>
                        </td>
                        <td>{{ eval.comment ?: '—' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th>Moyenne générale</th>
                    <th colspan="2">
                        <span class="badge 
                            {% if average >= 3.5 %}bg-success
                            {% elseif average >= 2.5 %}bg-info
                            {% elseif average >= 1.5 %}bg-warning text-dark
                            {% else %}bg-danger{% endif %}
                        ">
                            {{ average }}
                        </span>
                    </th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <div class="alert alert-warning">
            Aucune évaluation enregistrée pour cet établissement.
        </div>
    {% endif %}

    <a href="{{ path('establishments_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    <a href="{{ path('evaluate_establishment', {'id': establishment.id}) }}" class="btn btn-primary mt-3 ms-2">Évaluer / Modifier</a>
    <a href="{{ path('establishment_report_pdf', {'id': establishment.id}) }}" class="btn btn-danger mt-3">
    Télécharger le PDF
</a>

</div>
{% endblock %}
